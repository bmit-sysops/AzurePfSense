{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vNetName": {
            "type": "String",
            "metadata": {
                "description": "The name for the virtual network"
            }
        },
        "vNetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "The address prefix for the virtual network"
            }
        },
        "gatewaySubnetName": {
            "defaultValue": "gatewaysubnet",
            "type": "String",
            "metadata": {
                "description": "The name of the gateway subnet (must be set to gatewaysubnet)"
            }
        },
        "gatewaySubnetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "The address prefix of the gateway subnet (e.g.: 10.0.0.0/27)"
            }
        },
        "frontEndSubnetName": {
            "type": "String",
            "metadata": {
                "description": "The name of the front-end subnet"
            }
        },
        "frontEndSubnetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "The address prefix of the front-end subnet"
            }
        },
        "backEndSubnetName": {
            "type": "String",
            "metadata": {
                "description": "The name of the back-end subnet"
            }
        },
        "backEndSubnetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "The address prefix of the back-end subnet"
            }
        },
        "vmName": {
            "type": "String",
            "metadata": {
                "description": "Name for the pfSense instance"
            }
        },
        "vmSize": {
            "defaultValue": "Standard_A2",
            "type": "String",
            "metadata": {
                "description": "Size for the pfSense instance"
            }
        },
        "frontEndNicName": {
            "type": "String",
            "metadata": {
                "description": "Name for the front-end NIC"
            }
        },
        "frontEndIp": {
            "type": "String",
            "metadata": {
                "description": "IP for the front-end NIC"
            }
        },
        "backEndNicName": {
            "type": "String",
            "metadata": {
                "description": "Name for the back-end NIC"
            }
        },
        "backEndIp": {
            "type": "String",
            "metadata": {
                "description": "IP for the back-end NIC"
            }
        },
        "managedDiskName": {
            "type": "String",
            "metadata": {
                "description": "Name for the managed disk"
            }
        },
         "managedDiskStorageType": {
            "defaultValue": "Standard_LRS",
            "type": "String",
            "metadata": {
                "description": "Storage type for the managed disk"
            }
        },
        "vhdStorageAccountName": {
            "defaultValue": "bmitcustomiaasimagestore",
            "type": "String",
            "metadata": {
                "description": "Name of the storage account where the vhd file is stored. Note that blob.mlt.l01.bmitazure.com should be omiited."
            }
        },
        "sourceVhdPath": {
            "defaultValue": "/vhdstore/pfsense-245p1-stack.vhd",
            "type": "String",
            "metadata": {
                "description": "Path to the vhd file on the storage account (e.g. /vhdstore/pfsense-245p1-stack.vhd)"
            }
        },
        "osType": {
            "defaultValue": "Linux",
            "type": "String",
            "metadata": {
                "description": "OS Type of the image on the managed disk"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "_artifactsLocation": "https://raw.githubusercontent.com/bmit-sysops/AzurePfSense/azurestackdev-imageref/linked/",
        "virtualNetworkSubnets": [
            {
                "name": "[parameters('gatewaySubnetName')]",
                "properties": {
                    "addressPrefix": "[parameters('gatewaySubnetAddressPrefix')]"
                }
            },
            {
                "name": "[parameters('frontEndSubnetName')]",
                "properties": {
                    "addressPrefix": "[parameters('frontEndSubnetAddressPrefix')]"
                }
            },
            {
                "name": "[parameters('backEndSubnetName')]",
                "properties": {
                    "addressPrefix": "[parameters('backEndSubnetAddressPrefix')]"
                }
            }
        ],
        "networkTemplateUri": "[uri(variables('_artifactsLocation'), concat('virtualNetwork.json'))]",
        "diskTemplateUri": "[uri(variables('_artifactsLocation'), concat('managedDisk.json'))]",
        "virtualMachineTemplateUri": "[uri(variables('_artifactsLocation'), concat('pfSense.json'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "provisionVirtualNetwork",
            "apiVersion": "2018-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "vNetAddressPrefix": {
                        "value": "[parameters('vNetAddressPrefix')]"
                    },
                    "vNetSubnets": {
                        "value": "[variables('virtualNetworkSubnets')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "provisionManagedDisk",
            "apiVersion": "2018-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('diskTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "storageType": {
                        "value": "[parameters('managedDiskStorageType')]"
                    },
                    "sourceVhdPath": {
                        "value": "[parameters('sourceVhdPath')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('vhdStorageAccountName')]"
                    },
                    "osType": {
                        "value": "[parameters('osType')]"
                    },
                    "managedDiskName": {
                        "value": "[parameters('managedDiskName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "provisionVirtualMachine",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('virtualMachineTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "frontEndNicName": {
                        "value": "[parameters('frontEndNicName')]"
                    },
                    "backEndNicName": {
                        "value": "[parameters('backEndNicName')]"
                    },
                    "frontEndIp": {
                        "value": "[parameters('frontEndIp')]"
                    },
                    "backEndIp": {
                        "value": "[parameters('backEndIp')]"
                    },
                    "vNetName": {
                        "value": "[parameters('vNetName')]"
                    },
                    "frontEndSubnetName": {
                        "value": "[variables('virtualNetworkSubnets')[1].Name]"
                    },
                    "backEndSubnetName": {
                        "value": "[variables('virtualNetworkSubnets')[2].Name]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "managedDiskName": {
                        "value": "[parameters('managedDiskName')]"
                    },
                    "osType": {
                        "value": "[parameters('osType')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
